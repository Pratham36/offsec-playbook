<svg xmlns="http://www.w3.org/2000/svg" width="1500" height="420" viewBox="0 0 1500 420">
  <defs>
    <linearGradient id="bg" x1="0" x2="1">
      <stop offset="0" stop-color="#05070F"/>
      <stop offset="1" stop-color="#0A1224"/>
    </linearGradient>

    <linearGradient id="glow" x1="0" x2="1">
      <stop offset="0" stop-color="#00E1FF"/>
      <stop offset="1" stop-color="#0095FF"/>
    </linearGradient>

    <filter id="noise">
      <feTurbulence baseFrequency="0.8" numOctaves="3" result="turb"/>
      <feColorMatrix type="saturate" values="0"/>
      <feBlend in="SourceGraphic" mode="overlay"/>
    </filter>

    <style>
      .title { font: 800 74px 'Inter', sans-serif; fill: url(#glow); }
      .sub { font: 500 22px 'Inter', sans-serif; fill: #A7C7FF; }
      .tag { font: 600 15px 'Inter', sans-serif; fill: #0A1220; }
    </style>
  </defs>

  <rect width="1500" height="420" fill="url(#bg)"/>

  <!-- circuit lines -->
  <g opacity="0.14">
    <path d="M0 350 L1500 120" stroke="#0095FF" stroke-width="1.5" stroke-dasharray="10 14"/>
    <path d="M0 300 L1500 80" stroke="#00E1FF" stroke-width="1.2" stroke-dasharray="7 10"/>
  </g>

  <!-- main title -->
  <text x="80" y="150" class="title">Awesome-Hacking</text>
  <text x="80" y="190" class="sub">offsec-playbook · labs · tools · writeups · exploit-dev</text>

  <!-- tags -->
  <g transform="translate(80,230)">
    <rect width="150" height="34" rx="8" fill="#8be1ff"/>
    <text x="22" y="22" class="tag">TryHackMe</text>

    <rect x="170" width="120" height="34" rx="8" fill="#5aa9ff"/>
    <text x="192" y="22" class="tag">CTFs</text>

    <rect x="300" width="150" height="34" rx="8" fill="#8be1ff"/>
    <text x="320" y="22" class="tag">Exploit-Dev</text>

    <rect x="470" width="180" height="34" rx="8" fill="#5aa9ff"/>
    <text x="492" y="22" class="tag">Reverse-Engineering</text>
  </g>

  <!-- right code-window -->
  <g transform="translate(820,60)" opacity="0.9">
    <rect width="600" height="300" rx="16" fill="#060C18" stroke="#0A1A33" stroke-width="1.4"/>
    <g transform="translate(32,36)" fill="#00d4ff" font-family="monospace" font-size="18">
      <text y="18"># offsec-playbook</text>
      <text y="46" opacity="0.75">git clone https://github.com/Pratham36/offsec-playbook</text>
      <text y="74" opacity="0.55">cd offsec-playbook</text>
      <text y="102" opacity="0.55">./scripts/regenerate_rooms.sh</text>
      <text y="150" opacity="0.45"># hacking labs · automation · curated learning path</text>
    </g>
  </g>

  <!-- soft noise overlay -->
  <rect width="1500" height="420" fill="transparent" filter="url(#noise)" opacity="0.06"/>
</svg>
